<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mood_moments.Views.MoodEntryWizard.IntensityStep">
    <StackLayout>
        <Label Text="Step 4: Intensity" FontSize="22" FontAttributes="Bold"
               SemanticProperties.HeadingLevel="Level1"
               SemanticProperties.Description="Intensity Step Heading" />
        <Label x:Name="IntensityValueLabel" FontSize="18" HorizontalOptions="Center" />
        <Slider x:Name="IntensitySlider" Minimum="1" Maximum="5" Value="3"
                SemanticProperties.Description="Intensity Slider"
                />
        <Grid ColumnDefinitions="*,*,*,*,*" Margin="0,4,0,0">
            <Label Text="1" Grid.Column="0" HorizontalOptions="Start" />
            <Label Text="2" Grid.Column="1" HorizontalOptions="Center" />
            <Label Text="3" Grid.Column="2" HorizontalOptions="Center" />
            <Label Text="4" Grid.Column="3" HorizontalOptions="Center" />
            <Label Text="5" Grid.Column="4" HorizontalOptions="End" />
        </Grid>
    </StackLayout>
</ContentView>
