<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mood_moments.Views.MoodEntryWizard.ContextStep">
    <StackLayout>
        <Label Text="Step 6: Context" FontSize="20" FontAttributes="Bold" />
        <CollectionView x:Name="ContextOptionsView" SelectionMode="Single">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Padding="8" Orientation="Vertical">
                        <Button Text="{Binding Name}" CommandParameter="{Binding Name}" />
                        <Label Text="{Binding Description}" FontSize="12" TextColor="Gray" />
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentView>
