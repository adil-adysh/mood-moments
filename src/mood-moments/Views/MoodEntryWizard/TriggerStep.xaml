<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mood_moments.Views.MoodEntryWizard.TriggerStep">
    <StackLayout>
        <Label Text="Step 7: Triggers" FontSize="22" FontAttributes="Bold"
               SemanticProperties.HeadingLevel="Level1"
               SemanticProperties.Description="Triggers Step Heading" />
        <CollectionView x:Name="TriggerOptionsView" SelectionMode="Single"
                        SemanticProperties.Description="Trigger Options">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Padding="8" Orientation="Horizontal" Spacing="10">
                        <RadioButton IsChecked="{Binding IsSelected}" GroupName="TriggerGroup" Value="{Binding Name}"
                                     SemanticProperties.Description="{Binding Name}" />
                        <StackLayout Orientation="Vertical" Spacing="2">
                            <Label Text="{Binding Name}" FontAttributes="Bold"
                                   SemanticProperties.Description="{Binding Name}" />
                            <Label Text="{Binding Explanation}" FontSize="12" TextColor="Gray"
                                   SemanticProperties.Hint="{Binding Explanation}" />
                        </StackLayout>
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Button x:Name="DoneButton" Text="Finish" Margin="0,16,0,0" HorizontalOptions="End" Clicked="OnDoneClicked" />
    </StackLayout>
</ContentView>
