<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mood_moments.Views.MoodEntryWizard.MidEmotionStep"
             x:Name="MidEmotionStepRoot">
    <StackLayout Padding="10" Spacing="15">
        <Label Text="{Binding StepTitle}" FontSize="22" FontAttributes="Bold" />
        <Label Text="Select a more specific emotion" FontSize="18" FontAttributes="Bold" />
        <CollectionView ItemsSource="{Binding MidEmotions}" SelectionMode="Single" x:Name="MidEmotionsCollection">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <RadioButton Content="{Binding .}"
                                 GroupName="MidEmotionsGroup"
                                 CheckedChanged="OnMidEmotionCheckedChanged" />
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Grid ColumnSpacing="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Button Text="Back" Command="{Binding BackStepCommand}" Grid.Column="0" />
            <Button Text="Skip to Intensity" Command="{Binding SkipToIntensityCommand}" Grid.Column="1" />
            <Button Text="Next" Command="{Binding NextStepCommand}" Grid.Column="2" />
        </Grid>
    </StackLayout>
</ContentView>
