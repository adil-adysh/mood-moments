<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mood_moments.Views.RemindersPage"
             Title="Reminders">
    <StackLayout Padding="20">
        <Label Text="Reminders" FontSize="24" FontAttributes="Bold" />
        <CollectionView x:Name="RemindersList" Margin="0,10,0,0">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="0,4,0,4" Padding="10" BorderColor="LightGray" CornerRadius="8">
                        <StackLayout Orientation="Horizontal" Spacing="10">
                            <Label Text="⏰" FontSize="20" />
                            <Label Text="{Binding .}" FontSize="18" />
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Button Text="Add Reminder" x:Name="AddReminderButton" Margin="0,16,0,0" />
    </StackLayout>
</ContentPage>
