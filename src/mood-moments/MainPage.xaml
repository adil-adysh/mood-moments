<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mood_moments.MainPage"
             Title="Mood Journal">

    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="25">
            <Label
                Text="Mood Journal"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <CollectionView x:Name="JournalEntriesView">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="0,5" Padding="10" BorderColor="LightGray">
                            <VerticalStackLayout>
                                <Label Text="{Binding Date}" FontAttributes="Bold" />
                                <Label Text="{Binding Mood}" />
                                <Label Text="{Binding Notes}" FontAttributes="Italic" FontSize="Small" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
